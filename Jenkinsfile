pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                echo 'Building automatically again '
            }
            {
                echo 'Building automatically again and again'
            }
        }
 stage('Test') {
            steps {
                echo 'Testing automatically again'
            }
        }
 stage('Deploy') {
            steps {
                echo 'Deploying automatically'
            }
        }
    }
}
